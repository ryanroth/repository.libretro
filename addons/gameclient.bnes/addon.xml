<?xml version="1.0" encoding="UTF-8"?>
<addon id="@id@"
		name="bNES@arch@"
		version="@version@"
		provider-name="Libretro">
	<requires>
		<import addon="xbmc.libretro" version="1.0.0"/>
	</requires>
	<extension point="xbmc.gameclient"
			library_android="@library_android@"
			library_linux="@library_linux@"
			library_osx="@library_osx@"
			library_windx="@library_win@"
			library_wingl="@library_win@">
		<platforms>NES</platforms>
		<extensions>@extensions@</extensions>
		<allowvfs>@allowvfs@</allowvfs>
		<blockextract>@blockextract@</blockextract>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">bNES @pretty_version@</summary>
		<description>libretro port of bNES, a NES emulator.

Supported files: @supported_files@

Authors: byuu, Ryphecha.

Source: https://github.com/libretro/bnes-libretro</description>
		<platform>@platform@</platform>
		<nofanart>true</nofanart>
		<!--<broken>Poor performance and reported crashes. Use FCEU-Next.</broken>-->
		@broken@
	</extension>
</addon>
