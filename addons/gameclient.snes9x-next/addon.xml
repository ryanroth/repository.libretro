<?xml version="1.0" encoding="UTF-8"?>
<addon id="@id@"
		name="Snes9x-Next@arch@"
		version="@version@"
		provider-name="Libretro">
	<requires>
		<import addon="xbmc.libretro" version="1.0.0"/>
	</requires>
	<extension point="xbmc.gameclient"
			library_android="@library_android@"
			library_linux="@library_linux@"
			library_osx="@library_osx@"
			library_windx="@library_win@"
			library_wingl="@library_win@">
		<platforms>SNES</platforms>
		<extensions>@extensions@</extensions>
		<allowvfs>@allowvfs@</allowvfs>
		<blockextract>@blockextract@</blockextract>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Snes9x-Next @pretty_version@</summary>
		<description>Snes9x-Next is based on Snes9x, but has been heavily modified/speed-hacked to achieve better speed.

Supported files: @supported_files@

Icon credit: Alucryd (alucryd.deviantart.com)

Source: https://github.com/libretro/snes9x-next</description>
		<platform>@platform@</platform>
		<nofanart>true</nofanart>
	</extension>
</addon>
